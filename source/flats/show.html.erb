<!-- source/flats/show.html.erb -->

<!-- Read from data.flats with owner's name as key -->
<% flat = data.flats[owner] %>

<!-- Inject flat data in template -->
<div class="banner banner-flat" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.3) 0%, rgba(0,36,61,0.5) 55%), url(<%= flat.picture %>);">
</div>


  <div class="container" id="show-container">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-1">
        <div class="flat-header">
          <div class="flat-owner atext-center">
            <%= image_tag flat.owner_picture, class: "img-circle" %>
            <p><%= flat.owner_name %></p>
          </div>
          <div class="flat-details">
            <h3><%= flat.summary %></h3>
            <p><%= flat.city %></p>
            <% 5.times do %>
              <i class="fa fa-star"></i>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <form action="">
          <h2>Book this flat</h2>
          <input type="checkin" placeholder="checkin" class="form-control">
          <input type="checkout" placeholder="checkout" class="form-control">
          <select class="form-control">
            <option value="1">1 guest</option>
            <option value="2">2 guest</option>
            <option value="3">3 guest</option>
          </select>
          <input type="submit" value="Book it" class="btn btn-primary">
        </form>
      </div>
    </div>
  </div>

  <div class="wrapper-about">
    <div class="container">
      <div class="row">
        <h2>About this flat</h2>
        <div class="col-xs-12">
          <%= flat.about %>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-1">
          <p>The space</p>
        </div>
        <div class="col-xs-3">
          <p>Accomodates: <strong><%= flat.number_people %></strong></p>
          <p>Bathroom: <strong><%= flat.number_people %></strong></p>
          <p>Bed type: <strong><%= flat.number_people %></strong></p>
          <p>Bedrooms: <strong><%= flat.number_people %></strong></p>
        </div>
        <div class="col-xs-3">
          <p>Bed: <strong><%= flat.number_people %></strong></p>
          <p>Property type: <strong><%= flat.number_people %></strong></p>
          <p>Room type: <strong><%= flat.number_people %></strong></p>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-1">
          <p>Amenities</p>
        </div>
        <div class="col-xs-4"><i class="fa fa-cutlery" aria-hidden="true"></i><p> Kitchen</p></div>
        <div class="col-xs-4">

        </div>
      </div>
    </div>
  </div>




